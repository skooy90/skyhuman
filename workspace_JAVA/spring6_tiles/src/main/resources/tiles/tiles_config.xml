<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
	
	<definition name="baseLayout" template="/WEB-INF/views/layout/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/comm/header.jsp"/>
		<put-attribute name="side" value="/WEB-INF/views/comm/side.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/comm/footer.jsp"/>
		<put-attribute name="title" value="휴면오락실"/>
		
	</definition>
	
	<definition name="baseLayout2" template="/WEB-INF/views/layout/layout2.jsp">
		<put-attribute name="header" value="/WEB-INF/views/comm/header.jsp"/>
		<put-attribute name="side" value="/WEB-INF/views/comm/side.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/comm/footer.jsp"/>
		<put-attribute name="title" value="휴면오락실"/>
		
	</definition>
	
	<definition name="login" extends="baseLayout2">			
		<put-attribute name="content" value="/WEB-INF/views/content/login.jsp"/>
	</definition>

	<definition name="seven" extends="baseLayout">			
		<put-attribute name="content" value="/WEB-INF/views/content/sena.jsp"/>
	</definition>
	
	<definition name="mabi" extends="baseLayout">			
		<put-attribute name="content" value="/WEB-INF/views/content/mabi.jsp"/>
	</definition>



	<definition name="*.tiles" extends="baseLayout">			
		<put-attribute name="content" value="/WEB-INF/views/content/{1}.jsp"/>
	</definition>

	<definition name="*/*.tiles" extends="baseLayout">			
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp"/>
	</definition>
	
	
	
	
</tiles-definitions>